<section class="our-latest-impact">
    
    <section class="hero-section">
        <div class="hero-container">
            <div class="hero-content">
                <h1 class="hero-title">
                    {{ hero_title }}
                </h1>
                
                <div class="hero-subtitle-container">
                    {% if hero_subtitle %}
                        <p class="hero-subtitle">{{ hero_subtitle }}</p>
                    {% endif %}
                    
                    {% if cta_buttons %}
                        <div class="hero-cta-group">
                            {% for button in cta_buttons %}
                                <a href="{{ button.button_link.url }}" class="btn-cta">
                                    <img src="{{ theme.link }}/assets/pictos/arrow.png" alt="arrow" class="w-4 h-4" />
                                    {{ button.button_link.title }}
                                </a>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    
    <section class="cards-section mb-[172px] md:px-0">
        <div class="max-w-[1316px] mx-auto cards-container">
            
            {% for article in articles %}
                <div class="{{ article.card_classes }}">
                    <a href="{{ article.link }}" class="card-link-full"></a>
                    
                    <div class="{{ article.image_class }}">
                        <picture>
                            <source media="(max-width: 1315px)" srcset="{{ article.mobile_image }}">
                            <img src="{{ article.desktop_image }}" alt="{{ article.image_alt }}" />
                        </picture>
                        <div class="card-badge {{ article.badge_class }}">
                            {{ article.post_type == 'insights' ? 'INSIGHTS' : 'CASE STUDIES' }}
                        </div>
                    </div>
                    
                    <div class="{{ article.content_class }}">
                        <div class="card-category {{ article.category_class }}">
                            {{ article.card_category }}
                        </div>
                        
                        {% if article.card_type == 'full' %}
                            <h2 class="{{ article.title_class }}">{{ article.title }}</h2>
                        {% else %}
                            <h3 class="{{ article.title_class }}">{{ article.title }}</h3>
                        {% endif %}
                        
                        <a href="{{ article.link }}" class="card-link {{ article.link_class }} card-link-underline">
                            Read more
                        </a>
                    </div>
                </div>
            {% endfor %}
            
        </div>
    </section>
    
</section>